{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Pivert",
    "version": "0.1.0",
    "identifier": "org.falcolabs.pivert",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Pivert",
                "width": 400,
                "height": 800
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "android": {
            "minSdkVersion": 24
        }
    }
}
